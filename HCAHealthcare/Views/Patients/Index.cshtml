@model List<Patient>

@{
    ViewData["Title"] = "List of Patients";
}

<h2 class="text-center mt-4">List of Patients</h2>

<div class="row mb-3">
    <div class="col text-right">
        <a class="btn btn-success" asp-controller="Patients" asp-action="Create">New Patient</a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Description</th>
            <th>Due</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.Name</td>
                <td>@patient.Age</td>
                <td>@patient.Description</td>
                <td>@patient.Due.ToString("C")</td>
                <td>
                    <img src="/images/@patient.Image" width="100" class="img-thumbnail" alt="Patient Image" />
                </td>
                <td>
                    <a class="btn btn-outline-success btn-sm" asp-controller="Patients" asp-action="Edit" asp-route-id="@patient.Id">Update</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Patients" asp-action="Delete" asp-route-id="@patient.Id" onclick="return confirm('Are you sure you want to delete @patient.Name?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
